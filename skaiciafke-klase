/////////////////////////// pirmas 

package pavyzdys;

public class main {

	private static inputNumbers inputNumbers = new inputNumbers();
	private static OperatorSelector OperatorSelector = new OperatorSelector();
	private static AritmOperations AritmOperations = new AritmOperations();
	
	public static void main(String[] args) {
		while(true) {
			
			double num1 = inputNumbers.getDouble();
			double num2 = inputNumbers.getDouble();
			System.out.println(num1 + num2);
			char operation = OperatorSelector.getOperation();
			// sukisti viska dabar
			double result = AritmOperations.getArtimOperations(num1, num2, operation);
			System.out.printf("Operation result: %10.4f", result); // .4 yra 4 skaiciai po kablelio, printf
			
		}

	}

}

/////////////////////////// antras
package pavyzdys;

import java.util.Scanner;

public class inputNumbers {
	// sita yra antra klase, kuri leis skaityti is komandines eilutes skaiciukus kai issikviesiu ja kaip objekta
		
	private double num;
	// is karto reikia galvoti ar reikia konstruktoriaus?
	// Pvz ka reikes daryti
	private Scanner scanner = new Scanner(System.in); // jis kuriamas ne metode, o klases viduje, nes jis prisiklijuos prie srauto ir bandys gauti viska ko reikes
	
	public double getDouble () {
		// dabar kyla problema, kad reikia scannerio
		// ir cia prasom jau vartotojo kazko:
		System.out.println("Please input number: ");
		
		if (scanner.hasNextDouble()) {
			num = scanner.nextDouble();
			// pasitikrinti galima ir ka darys
			
		} else {
			System.out.println("Incorrect number type. Please input new number.");
			scanner.next(); // duodu jam pateikti kita numeri
			num = getDouble();
		}
		
		return num;
	}

}
////////////////////////// trecias
package pavyzdys;

public class AritmOperations {

	// cioa turi buti keli numeriukai

	private double num1;
	private double num2;
	private double result;

	public double getArtimOperations(double num1, double num2, char operation) {

		switch (operation) {

		case '+':
			result = num1 + num2;
			break;
		case '-':
			result = num1 - num2;
			break;
		case '*':
			result = num1 * num2;
			break;
		case '/':
			result = num1 * num2;
			break;
		default:
			result = 0.0;

		}

		return result;
	}

}
///////////////////////////////////kitas
package pavyzdys;

import java.util.Scanner;

public class OperatorSelector {

	private char operation;
	private Scanner scanner = new Scanner(System.in);
	
	public char getOperation() {
		// cia jau reikai apgalvoti logika, kad nebutu exeptionu
		System.out.println("Please input operator: ");
		
		char operation = scanner.next().charAt(0); //next ima tik tokena, java string token, taip daroma, kad mnebutu exeptions
		
		// char galima lyginti, string negalima, cia pasiziureti
		if(operation == '/' || operation == '+' || operation == '-' || operation == '*') {
			return operation;
		} else {
			System.out.println("Wrong operator. Please input new.");
			scanner.next();
			operation = getOperation();
		}
		
		return operation;

	}

}
